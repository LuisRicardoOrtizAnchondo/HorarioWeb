    div(class="events")
      ul
        li(class="events-group")
          div(class="top-info")
            span Lunes
          ul
            each subject in subjects
              - var name = subject.name
              - var color = subject.color
                each schedule in subject.schedule
                  if (schedule.day == "Lunes")
                    li(class="single-event" data-start=schedule.start data-end=schedule.end data-event=color)
