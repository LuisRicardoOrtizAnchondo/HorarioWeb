mixin new_form(action, method)
  div(class="panel panel-default")
    div(class="panel-body")
      form(class="form-horizontal", action=action, method=method)
        fieldset
          legend 
            div(class="col-md-offset-3") Registrar Nueva Materia
          div(class="form-group")
            label(class="col-md-2 control-label") 
              span(class='fa  fa-book fa-lg')
            div(class="col-md-10")
              input(type="text" class="form-control" placeholder="Nombre de la materia" name="subjectName")
          div(class="form-group")
            label(class="col-md-2 control-label") 
              span(class='fa  fa-user-circle fa-lg')
            div(class="col-md-10")
              input(type="text" class="form-control" placeholder="Nombre del maestro" name="subjectTeacher")
          div(class="form-group")
            label(class="col-md-2 control-label") 
              span(class='fa  fa-clock-o fa-lg')
            div(class="col-md-10")
              input(type="text" class="form-control" placeholder="Horario de clase" name="subjectSchedule")
          div(class="form-group")
            label(class="col-md-2 control-label") 
              span(class='fa  fa-building-o fa-lg')
            div(class="col-md-10")
              input(type="text" class="form-control" placeholder="Sal√≥n" name="subjectClassroom")
          div(class="form-group")
            div(class="col-md-10 col-md-offset-5")
              button(type="submit" class="btn btn-primary") Agregar
